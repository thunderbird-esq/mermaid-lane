# IPTV Web Backend Environment Variables
# Copy this file to .env and customize values

# Admin API key for protected endpoints (CHANGE THIS!)
# Generate a secure key: openssl rand -hex 32
IPTV_ADMIN_API_KEY=change-me-to-something-secure

# Server settings
IPTV_HOST=0.0.0.0
IPTV_PORT=8000
IPTV_DEBUG=false

# Database
IPTV_DATABASE_PATH=data/iptv_cache.db

# Cache TTL (seconds)
IPTV_CACHE_TTL_SECONDS=3600

# CORS Origins (comma-separated, use * for all origins in dev)
# For production, specify your domain(s):
# IPTV_CORS_ORIGINS=["https://yourdomain.com"]
IPTV_CORS_ORIGINS=["*"]

# Auto-sync interval (hours, 0 to disable)
IPTV_SYNC_INTERVAL_HOURS=24

# Rate limiting
IPTV_RATE_LIMIT_PER_MINUTE=100
IPTV_STREAM_RATE_LIMIT_PER_MINUTE=30
